    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch LLDB Debuger",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/output/bin/${workspaceFolderBasename}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": true,
            // "preLaunchTask": "Build Project",
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\mingw\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]

        }
